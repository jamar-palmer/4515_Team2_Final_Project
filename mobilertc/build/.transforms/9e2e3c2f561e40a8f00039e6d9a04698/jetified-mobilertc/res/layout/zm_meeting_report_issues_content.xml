<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ZMReportPrivacyDeclaration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zm_margin_small_size"
        android:layout_marginTop="@dimen/zm_margin_smaller_size"
        android:layout_marginRight="@dimen/zm_margin_small_size"
        android:layout_marginBottom="@dimen/zm_margin_smaller_size"
        android:text="@string/zm_lbl_report_participant_issue_privacy_declaration_150328"
        android:textColor="@color/zm_v2_txt_secondary"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zm_margin_small_size"
        android:layout_marginTop="@dimen/zm_margin_small_size"
        android:layout_marginRight="@dimen/zm_margin_small_size"
        android:layout_marginBottom="@dimen/zm_margin_smaller_size"
        android:text="@string/zm_lbl_report_participant_issue_email_address_200528"
        android:textColor="@color/zm_v2_txt_primary" />

    <EditText
        android:id="@+id/ZMReportEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/zm_hint_email"
        android:minHeight="55dp"
        android:layout_marginLeft="@dimen/zm_margin_small_size"
        android:layout_marginRight="@dimen/zm_margin_small_size"
        android:textColor="@color/zm_v2_txt_primary"
        android:textColorHint="@color/zm_v2_txt_secondary"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zm_margin_small_size"
        android:layout_marginTop="@dimen/zm_margin_medium_size"
        android:layout_marginRight="@dimen/zm_margin_small_size"
        android:layout_marginBottom="@dimen/zm_margin_smaller_size"
        android:text="@string/zm_lbl_report_participant_issue_top_hint_200528"
        android:textColor="@color/zm_v2_txt_primary" />

    <FrameLayout
        android:id="@+id/ZMReportIssueOffensive"
        style="@style/ZMReportIssueItem">

        <TextView
            style="@style/ZMReportIssueItemText"
            android:text="@string/zm_lbl_report_participant_issue_offensive_200528" />

        <ImageView
            android:id="@+id/offensiveTick"
            style="@style/ZMReportIssueItemTick"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/zm_v2_svg_setting_divider"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/ZMReportIssueSuicide"
        style="@style/ZMReportIssueItem">

        <TextView
            style="@style/ZMReportIssueItemText"
            android:text="@string/zm_lbl_report_participant_issue_suicide_200528" />

        <ImageView
            android:id="@+id/suicideTick"
            style="@style/ZMReportIssueItemTick"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/zm_v2_svg_setting_divider"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/ZMReportIssuePrivateInfo"
        style="@style/ZMReportIssueItem">

        <TextView
            style="@style/ZMReportIssueItemText"
            android:text="@string/zm_lbl_report_participant_issue_private_info_200528" />

        <ImageView
            android:id="@+id/privateInfoTick"
            style="@style/ZMReportIssueItemTick"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/zm_v2_svg_setting_divider"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/ZMReportIssueSpam"
        style="@style/ZMReportIssueItem">

        <TextView
            style="@style/ZMReportIssueItemText"
            android:text="@string/zm_lbl_report_participant_issue_spam_200528" />

        <ImageView
            android:id="@+id/spamTick"
            style="@style/ZMReportIssueItemTick"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/zm_v2_svg_setting_divider"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/ZMReportIssueUninvitedGuest"
        style="@style/ZMReportIssueItem">

        <TextView
            style="@style/ZMReportIssueItemText"
            android:text="@string/zm_lbl_report_participant_issue_uninvited_200528" />

        <ImageView
            android:id="@+id/uninvitedGuestTick"
            style="@style/ZMReportIssueItemTick"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/zm_v2_svg_setting_divider"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/ZMReportIssueCopyright"
        style="@style/ZMReportIssueItem">

        <TextView
            style="@style/ZMReportIssueItemText"
            android:text="@string/zm_lbl_report_participant_issue_copyright_200528" />

        <ImageView
            android:id="@+id/copyrightTick"
            style="@style/ZMReportIssueItemTick"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/ZMReportIssueImpersonation"
        style="@style/ZMReportIssueItem">

        <TextView
            style="@style/ZMReportIssueItemText"
            android:text="@string/zm_lbl_report_participant_issue_impersonation_200528" />

        <ImageView
            android:id="@+id/impersonationTick"
            style="@style/ZMReportIssueItemTick"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/ZMReportIssueOther"
        style="@style/ZMReportIssueItem">

        <TextView
            style="@style/ZMReportIssueItemText"
            android:text="@string/zm_lbl_report_participant_issue_other_200528" />

        <ImageView
            android:id="@+id/otherTick"
            style="@style/ZMReportIssueItemTick"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/zm_v2_svg_setting_divider"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/zm_v2_svg_setting_divider"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/btnAttachPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:padding="18dp"
        android:text="@string/zm_lbl_report_participant_issue_attach_photo_200528"
        android:textColor="@color/zm_v2_txt_action"
        android:textSize="@dimen/zm_ui_kit_text_size_16sp" />

    <FrameLayout
        android:id="@+id/previewContainer"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <com.zipow.videobox.view.roundedview.RoundedImageView
            android:id="@+id/previewImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/zm_in_meeting_report_photo_preview_bg"
            android:padding="1dip"
            android:scaleType="centerCrop"
            app:riv_corner_radius_bottom_left="8dp"
            app:riv_corner_radius_bottom_right="8dp"
            app:riv_corner_radius_top_left="8dp"
            app:riv_corner_radius_top_right="8dp" />

        <ImageView
            android:id="@+id/previewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pic_delete"
            android:contentDescription="@string/zm_lbl_delete"/>

    </FrameLayout>

</LinearLayout>