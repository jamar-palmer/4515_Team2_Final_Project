<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout
        android:id="@+id/panelTitleBar"
        style="@style/ZmTitleBar"
        zoom:zm_leftButton="@+id/btnBack"
        zoom:zm_rightButton="@+id/btnRight"
        zoom:zm_title="@+id/txtTitle" >
        <ImageButton
            android:id="@+id/btnBack"
            style="@style/ZmBackButton"
            android:contentDescription="@string/zm_btn_back" />
        <Button
            android:id="@+id/btnRight"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <us.zoom.androidlib.widget.ZMDynTextSizeTextView
            android:id="@+id/txtTitle"
            style="@style/ZmTitleBarTitle"
            android:paddingLeft="@dimen/zm_padding_smallest_size"
            android:paddingRight="@dimen/zm_padding_smallest_size"
            android:text="@string/zm_title_select_time_zone" />
    </us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout>
        
    <us.zoom.androidlib.widget.TimeZoneListView
        android:id="@+id/timeZoneListView"
        android:layout_width = "match_parent"
        android:layout_height="match_parent">
        
    </us.zoom.androidlib.widget.TimeZoneListView>
    
</LinearLayout>
