<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="53dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zm_bottom_sheet_round_rect_white_bg"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="48dp"
        android:orientation="vertical">


        <TextView
            style="@style/ZMTextView.Normal.OnDark.Bold"
            android:background="@drawable/zm_ic_meeting2chat_new_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/txtNew"
            android:text="@string/zm_lbl_meeting2chat_new_218634" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ZMTextView.Large"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:id="@+id/txtPopDes"
            android:text=""/>



        <com.zipow.videobox.view.mm.MMMeetingCardInfoView
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/panelMeetingInfo"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnView"
            android:layout_marginTop="40dp"
            android:text="@string/zm_lbl_meeting2chat_continue_218634"
            android:minHeight="48dp"
            style="@style/ZMButton.NewHappyPath.Medium"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:layout_marginTop="15dp"
            android:minHeight="48dp"
            android:text="@string/zm_lbl_meeting2chat_not_now_218634"
            style="@style/ZMButton.Gray.Medium"/>
    </LinearLayout>
</RelativeLayout>
