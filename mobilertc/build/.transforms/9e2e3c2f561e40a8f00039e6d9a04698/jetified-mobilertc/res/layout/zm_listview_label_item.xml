<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zm_v2_light_bg_opaque"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingLeft="10dp"
    android:minHeight="@dimen/zm_quick_search_list_item_header_min_height"
    android:gravity="center_vertical"
    android:paddingTop="3dp" >

    <ImageView
        android:id="@+id/imgLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zm_mm_starred_list_head_icon"
        android:layout_marginRight="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtHeaderLabel"
        style="@style/ZmTextView.Content.Secondary.Medium.Dimmed"
        android:gravity="left|center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Header 1234" />

</LinearLayout>