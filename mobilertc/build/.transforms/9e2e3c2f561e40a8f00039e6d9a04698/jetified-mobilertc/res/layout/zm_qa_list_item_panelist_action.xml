<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/zm_margin_normal_size"
    android:orientation="vertical"
    android:paddingBottom="@dimen/zm_padding_medium_size"
    android:paddingLeft="@dimen/zm_padding_normal_size"
    android:paddingRight="@dimen/zm_padding_normal_size"
    >
    <us.zoom.androidlib.ZMMaterialActionButtonLayout
        android:id="@+id/zmMaterialActionButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zoom:zm_text_color_negative="@color/zm_v2_btn_black_text_color"
        zoom:zm_text_color_positive="@color/zm_v2_btn_white_text_color"
        zoom:zm_text_negative="@string/zm_qa_btn_answer_live_41047"
        zoom:zm_text_positive="@string/zm_qa_btn_type_answer_41047"
        zoom:zm_visible_negative="true"
        zoom:zm_visible_neutral="false"
        zoom:zm_visible_positive="true" />
</LinearLayout>