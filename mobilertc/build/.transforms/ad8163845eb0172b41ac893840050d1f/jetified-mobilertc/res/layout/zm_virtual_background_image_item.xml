<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_margin="8dp">

    <com.zipow.videobox.view.roundedview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:adjustViewBounds="true"
        android:foreground="@drawable/zm_virtual_background_image_item_fg"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius_bottom_left="20dp"
        app:riv_corner_radius_bottom_right="20dp"
        app:riv_corner_radius_top_left="20dp"
        app:riv_corner_radius_top_right="20dp"
        tools:src="@drawable/zm_ic_vb_blur" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:importantForAccessibility="no"
        android:textColor="@color/zm_v1_white"
        android:textSize="@dimen/zm_ui_kit_text_size_13sp"
        tools:text="@string/zm_lbl_virtual_background_blur_item_262452" />
</FrameLayout>
