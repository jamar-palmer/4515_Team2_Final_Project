<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/zm_white">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zm_ic_no_conversation"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/ZmTextView.Content.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zm_margin_normal_size"
            android:text="@string/zm_lbl_find_people_and_start_chat_79032"
            android:focusable="true" />

        <Button
            android:id="@+id/btn_add_contacts"
            style="@style/ZmButton.Medium"
            android:layout_marginTop="@dimen/zm_margin_large_size"
            android:layout_marginBottom="@dimen/zm_margin_large_size"
            android:layout_marginRight="@dimen/zm_margin_largest_size"
            android:layout_marginLeft="@dimen/zm_margin_largest_size"
            android:layout_width="match_parent"
            android:text="@string/zm_lbl_add_contacts_79032" />
    </LinearLayout>
</LinearLayout>