<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llActionArea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/zm_padding_large_size"
    android:paddingRight="@dimen/zm_padding_smaller_size"
    android:paddingBottom="@dimen/zm_padding_medium_size"
    android:paddingTop="@dimen/zm_padding_medium_size"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <TextView
        style="@style/ZMTextView.OnLight.Normal.DeepGrey"
        android:id="@+id/txtWaitingLiveAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zm_qa_msg_waiting_live_answer_41047" />

    <us.zoom.androidlib.ZMMaterialActionButtonLayout
        android:id="@+id/zmMaterialActionButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zoom:zm_visible_negative="false"
        zoom:zm_visible_positive="true"
        zoom:zm_visible_neutral="false"
        zoom:zm_text_color_negative="@color/zm_v2_btn_black_text_color"
        zoom:zm_text_color_positive="@color/zm_v2_btn_white_text_color"
        zoom:zm_text_negative="@string/zm_btn_cancel"
        zoom:zm_text_positive="@string/zm_btn_done"
        zoom:zm_text_size="@dimen/zm_font_large_size"/>
</LinearLayout>