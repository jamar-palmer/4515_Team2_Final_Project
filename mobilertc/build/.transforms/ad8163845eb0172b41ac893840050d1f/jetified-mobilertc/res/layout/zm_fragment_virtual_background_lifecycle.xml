<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zoom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout
        android:id="@+id/panelTitleBar"
        style="@style/ZmTitleBar.Dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zm_pt_titlebar_height"
        zoom:zm_leftButton="@+id/btnBack"
        zoom:zm_rightButton="@+id/viewRight"
        zoom:zm_title="@+id/txtTitle">

        <ImageButton
            android:id="@+id/btnBack"
            style="@style/ZmBackButton.Dark"
            android:contentDescription="@string/zm_btn_back" />

        <View
            android:id="@+id/viewRight"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <us.zoom.androidlib.widget.ZMDynTextSizeTextView
            android:id="@+id/txtTitle"
            style="@style/ZmTitleBarTitle.Dark"
            android:text="@string/zm_title_setting_virtual_background_174032" />
    </us.zoom.androidlib.widget.ZMIOSStyleTitlebarLayout>

    <ScrollView
        android:id="@+id/panelOptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zm_window_bg">

        <us.zoom.androidlib.widget.ZMSettingsLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp">

            <TextView
                android:id="@+id/txt_sub_title"
                style="@style/ZmSettingDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zm_margin_normal"
                android:layout_marginBottom="@dimen/zm_margin_normal"
                android:focusable="false"
                android:text="@string/zm_meeting_setting_virtual_background_lifecycle_head_description_174032" />

            <us.zoom.androidlib.widget.ZMSettingsCategory
                android:id="@+id/panel_auto_connect_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/panel_all_meetings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/ZmSettingItem"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ZmSettingItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/zm_meeting_setting_virtual_background_lifecycle_option_all_meetings_174032" />

                    <ImageView
                        android:id="@+id/img_all_meetings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/zm_setting_item_padding_right"
                        android:contentDescription="@string/zm_accessibility_icon_item_selected_19247"
                        android:src="@drawable/zm_group_type_select"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/panel_current_meeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/ZmSettingItem"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ZmSettingItemTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/zm_meeting_setting_virtual_background_lifecycle_option_current_meeting_174032" />

                    <ImageView
                        android:id="@+id/img_current_meeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/zm_setting_item_padding_right"
                        android:contentDescription="@string/zm_accessibility_icon_item_selected_19247"
                        android:src="@drawable/zm_group_type_select"
                        android:visibility="gone" />
                </LinearLayout>
            </us.zoom.androidlib.widget.ZMSettingsCategory>

            <TextView
                android:id="@+id/txt_option_description"
                style="@style/ZmSettingDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zm_margin_normal"
                android:focusable="false"
                android:text="@string/zm_meeting_setting_virtual_background_lifecycle_all_meeting_description_174032" />

        </us.zoom.androidlib.widget.ZMSettingsLayout>
    </ScrollView>

</LinearLayout>