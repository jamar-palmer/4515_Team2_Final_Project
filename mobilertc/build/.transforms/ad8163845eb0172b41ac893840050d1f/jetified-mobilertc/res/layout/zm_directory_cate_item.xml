<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCateName"
        style="@style/ZmTextView.Title.Medium"
        android:gravity="left|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="My Contacts"
        android:paddingBottom="@dimen/zm_padding_large_size"
        android:paddingTop="@dimen/zm_padding_large_size"
        android:paddingLeft="@dimen/zm_padding_normal_size"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:background="@color/zm_v2_cell_divider"/>
</LinearLayout>