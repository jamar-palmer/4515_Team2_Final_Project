<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/zm_padding_normal"
    android:paddingLeft="@dimen/zm_padding_small"
    android:paddingRight="@dimen/zm_padding_normal"
    android:paddingBottom="@dimen/zm_padding_normal"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/txtTime"
        style="@style/ZmTextView.Content.Primary.Small.Dimmed"
        android:maxLines="2"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|right"
        tools:text="09:00\nAM" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/zm_padding_normal"
        android:paddingRight="@dimen/zm_padding_small">

        <TextView
            android:id="@+id/txtTopic"
            style="@style/ZmTextView.Content.Primary"
            android:paddingLeft="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="Topic" />

        <TextView
            android:id="@+id/txtMeetingId"
            style="@style/ZmTextView.Content.Primary.Small.Dimmed"
            android:paddingLeft="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zm_margin_smallest"
            android:gravity="center_vertical"
            tools:text="Meeting Id" />
    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        style="@style/ZmButton.Small.Secondary"
        android:duplicateParentState="false"
        android:text="@string/zm_btn_start" />
</LinearLayout>
